package templates;

import migrator.Input;
import mjson.Json;

public class PatientDiseaseRelation {

	static String FILE_PATH  = "/patient_files/disease-symptom";
	static String PATIENT_ID_KEY  = "patient";
	static String DISEASE_ID_KEY  = "disease";
	
	public static Input template() {
		
		return new Input(FILE_PATH) {
			
			@Override
			public String template(Json relationship) {
				
				return "match "
						+ "$disease isa disease has disease-id " + relationship.at(PATIENT_ID_KEY).asInteger() + ";" 
						+ "$symptom isa symptom has symptom-id " + relationship.at(SYMPTOM_ID_KEY).asInteger() + ";"
						+ "insert (described-disease:$disease, disease-symptom:$symptom) isa disease-includes;"
						+ ";";
			}
		};
		
	} 
}


