package templates;

import migrator.Input;
import mjson.Json;

public class PatientDiseaseRelation {

	static String FILE_PATH  = "/patient_files/patient-disease";
	static String PATIENT_ID_KEY  = "patient";
	static String DISEASE_ID_KEY  = "disease";
	
	public static Input template() {
		
		return new Input(FILE_PATH) {
			
			@Override
			public String template(Json relationship) {
				
				return "match "
						+ "$user isa person has user-id " + relationship.at(PATIENT_ID_KEY).asInteger() + ";" 
						+ "$disease isa disease has disease-id " + relationship.at(DISEASE_ID_KEY).asInteger() + ";"
						+ "insert (patient:$user, suffered-disease:$disease) isa patient-diagnosis;";
			}
		};
		
	} 
}


